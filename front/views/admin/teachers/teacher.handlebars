<h2>Lista de Professores</h2>
<hr>
<a href="/teacher/cad"><button type="button" class="btn btn-success">Novo Professor</button></a>
{{#each teachers}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small>Email: {{email}}</small><br>
        <small>Telefone: {{telefone}}</small>
        <br>
        <form action="/teacher/deletar/" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar</button>
        </form>
    </div>
</div>

{{else}}

{{/each}}